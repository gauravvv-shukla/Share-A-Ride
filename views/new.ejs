  <body>
    <div class="cycle">
      <div class="row">
        <div class="col-lg-2 b" id="row1">
            <h1 class="h1a">Register Now!</h1>

        </div>
        <div class="col-lg-2 a">
            <i class="fas fa-bicycle fa-4x"></i>
        </div>
      </div>
    </div>
    <div class="div">
      <form action="/names" method="POST">
        <div class="form-row">
          <div class="form-group col-md-6 ">
            <label for="inputName">Name</label>
            <input type="text" class="form-control form-control-lg" id="inputName" placeholder="Name" name="name">
          </div>
        </div>
        <div class="form-group">
          <label for="inputAddress">Address</label>
          <input type="text" name="address" class="form-control form-control-lg" id="inputAddress" placeholder="1234 Main St">
        </div>
        <div class="form-row">
          <div class="form-group col-md-2">
            <label for="inputZip">Pincode</label>
            <input type="number" name="pincode" class="form-control form-control-lg" id="inputZip" placeholder="Ex - 440017">
          </div>
          <div class="form-group col-md-6">
            <label for="inputPhone">Phone Number</label>
            <input type="number" name="phone" class="form-control form-control-lg" id="inputPhone" placeholder="1234567890">
          </div>
        </div>

        <button  class="btn btn-outline-light btn-lg f" >Submit</button>
        <!-- <a class="btn btn-outline-light btn-lg f" href="thankyou.html" role="button">Register</a> -->
      </form>
    </div>

     
